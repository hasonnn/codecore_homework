<%- include("../partials/header") %>

<div class="card w-100">
    <% for (let cohort of cohorts) { %>
    <div class="card-body-index">
      <% if (cohort.logoURL) {%>
      <img src="<%= cohort.logoURL %>" class="rounded-circle" width="50" height="50" alt="cohort logo">
      <% } %>  
      <h5 class="card-title"><%= cohort.name %></h5>
      <p class="card-text"><%= cohort.members %></p>
      <a href="./cohorts/<%= cohort.id %>" class="btn btn-outline-primary">Show Cohort</a>
    </div>
    <% } %>
  </div>

<%- include("../partials/footer") %>


